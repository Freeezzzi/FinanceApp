<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="candle_chip_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@drawable/candle_chip_background</item>
        <item name="android:checkable">true</item>
        <item name="android:textColor">@drawable/candle_chip_fontcolor</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="summary_labels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="summary_values">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
</resources>